<p id="notice"><%= notice %></p>

<div class="user_show">
<p>
  <strong>img:</strong>
  <% if @user.icon.attached? %>
    <%= image_tag(@user.icon)  %>
  <% else %>
    <%= image_tag("noimage.png") %>
  <% end %>
</p>
<p>
  <strong>name:</strong>
  <%= @user.name %>
</p>
<% if @user == current_user %>
  <%= link_to  edit_user_registration_path, class:"btn btn-default btn-s-md" do %>
    <i class="fas fa-edit"></i>edit
  <% end %>|
<% end %>
<%= link_to users_path, class:"btn btn-default btn-s-md" do %>
  <i class="fas fa-undo-alt"></i>back
<% end %>

</div>
