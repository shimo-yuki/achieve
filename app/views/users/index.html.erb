<div class="row">
  <div class="users mb-3 text-center">
    <h1>Listing Users</h1>
  </div>
  <div class="col-md-3">
    <%= render 'layouts/profile' %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-6">
          <div class="row text-center">
            <div class="col-md-10 offset-md-1 user-panel mt-2 pt-3 mb-2">
              <h4><%= user.name == nil ? "no-user" : user.name.truncate(10) %></h4>
              <%= user.icon.attached? ? image_tag(user.icon) : image_tag("noimage.png") %>
              <div class="blog-links text-center">
                <%= link_to 'Show', user, class: "btn btn-light m-3" %>
              </div>
              <% if user_signed_in? %>
                <% unless user == current_user %>
                  <% if current_user.followed?(user) %>
                    <%= link_to 'フォローを解除する', user_relationships_path(user), method: :delete, class: 'btn btn-denger' %>
                  <% else %>
                    <%= link_to 'フォローする', user_relationships_path(user), method: :post, class: 'btn btn-light' %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
