<div class="row">
  <div class="blog mb-3 text-center">
    <h1>Listing Blogs</h1>
  </div>
  <div class="col-md-3">
    <%= render 'layouts/profile' %>
  </div>
  <div class="col-md-9">
    <div class="row">
      <% @blogs.each do |blog| %>
        <div class="col-md-3 pb-3">
          <div class="blog-panel text-center">
            <div class="mt-4">
              <h5><%= blog.user.name == nil ? "no-user" : blog.user.name.truncate(5) %></h5>
              <h6 class="m-3"><%= blog.title.truncate(5) %></h6>
              <h7 class="m-2"><%= blog.content.truncate(15) %></h7>
              <div class="blog-links ">
                <%= link_to 'Show', blog, class: "btn btn-light m-3" %><br>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
